generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model user {
  id    Int     @default(autoincrement()) @id
  username String @unique
  password String
  email String  @unique    
  fullname  String
  token String? @db.Text
  @@map("users")
}